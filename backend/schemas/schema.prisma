generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Products {
  id    Int     @id @map("_id")
  name  String
  price Int
  description  String
  category  String
  images String
}

model Users {
  id    Int     @id @map("_id")
  email String  @unique
  password  String
}

model Messages {
  id    Int     @id @map("_id")
  email String  @unique
  name  String
}

model Orders {
  id    Int     @id @map("_id")
  createdAt DateTime  @default(now())
  name  String
}